{
    "name": "Bear",
    "description": "Bear detection app.",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ],
    "icons":{
        "16": "/images/logo-only-16x16.png",
        "32": "/images/logo-only-32x32.png",
        "48": "/images/logo-only-48x48.png",
        "128": "/images/logo-only-128x128.png"
    },
    "action": {
        "default_icon": {
            "16": "/images/logo-only-16x16.png",
            "32": "/images/logo-only-32x32.png",
            "48": "/images/logo-only-48x48.png",
            "128": "/images/logo-only-128x128.png"
        },
        "default_popup": "popup.html"
    }
}